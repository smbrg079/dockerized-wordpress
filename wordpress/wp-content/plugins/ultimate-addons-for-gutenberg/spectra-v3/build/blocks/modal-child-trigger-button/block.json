{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "spectra/modal-child-button",
  "version": "3.0.0",
  "title": "Button",
  "category": "spectra",
  "description": "Add a customizable trigger button for this modal popup.",
  "textdomain": "ultimate-addons-for-gutenberg",
  "parent": [
    "spectra/modal-child-trigger"
  ],
  "supports": {
    "__experimentalBorder": {
      "width": true,
      "color": true,
      "radius": true,
      "style": true,
      "shadow": true,
      "__experimentalDefaultControls": {
        "width": true,
        "color": true,
        "radius": true,
        "shadow": true
      }
    },
    "html": false,
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "__experimentalFontStyle": true,
      "__experimentalFontWeight": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true,
      "__experimentalTextTransform": true,
      "__experimentalWritingMode": true,
      "__experimentalDefaultControls": {
        "fontSize": true,
        "fontFamily": true
      }
    },
    "shadow": true,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "gradients": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    }
  },
  "example": {
    "attributes": {
      "isPreview": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": [
    "file:./style-index.css",
    "spectra-blocks-common"
  ],
  "usesContext": [
    "spectra/modal/modalTrigger",
    "spectra/modal/modalId"
  ],
  "attributes": {
    "anchor": {
      "type": "string"
    },
    "isPreview": {
      "type": "boolean",
      "default": false
    },
    "text": {
      "type": "string",
      "default": "Click here"
    },
    "icon": {
      "type": [
        "string",
        "object"
      ]
    },
    "iconPosition": {
      "type": "string"
    },
    "size": {
      "type": "string"
    },
    "gap": {
      "type": "string"
    },
    "flipForRTL": {
      "type": "boolean",
      "default": false
    },
    "showText": {
      "type": "boolean",
      "default": true
    },
    "textColor": {
      "type": "string"
    },
    "textColorHover": {
      "type": "string"
    },
    "iconColor": {
      "type": "string"
    },
    "iconColorHover": {
      "type": "string"
    },
    "backgroundColorHover": {
      "type": "string"
    },
    "backgroundGradientHover": {
      "type": "string"
    }
  }
}